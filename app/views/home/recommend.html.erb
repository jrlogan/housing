<h1>Recommendations for Apartment <%= @apartment.id %></h1>
<p>
  <strong>Rent:</strong>
  $<%= @apartment.rent %>
</p>

<p>
  <strong>Floor:</strong>
  <%= @apartment.floor %>
</p>

<p>
  <strong>Max Capacity:</strong>
  <%= @apartment.max_capacity %>
</p>

<p>
  <strong>Pets:</strong>
  <%= @apartment.pets_allowed %>
</p>

<p>
  <strong>Wheelchair Accessible:</strong>
  <%= @apartment.wheelchair_accessible %>
</p>

<p>
  <strong>Smoking:</strong>
  <%= @apartment.smoking %>
</p>

<p>
  <strong>Information:</strong>
  <%= @apartment.information %>
</p>

<h1>Recommended clients, sorted by need</h1>
<% @recommended_clients.each do |c| %>
  <%= render partial: 'client', locals: {client: c} %>
  <a href="/apartments/<%= @apartment.id %>/place/<%= c.id %>">Add this client to this apartment</a>
  <hr>
<% end %>